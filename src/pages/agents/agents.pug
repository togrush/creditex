extends Layouts/public-pages-layout/public-pages-layout.pug

block variables
  - let title = 'Agents';
  - let header = true;
  - let footer = true;
  - let pageClassName = 'agents-page';

block styles
  link(href=require('./agents.scss') rel='stylesheet')

block scripts
  script(src=require('./agents.js') defer)

block content
  include Components/brokerMain/brokerMain.pug
  +brokerMain(
        'Агентам',
        'Зарабатывайте совместно с Сreditex.Broker заключая успешные сделки',
        'Присоединяйтесь к нашим кредиторам. Привлекайте клиентов и открывайте новые возможности с помощью надежных финансовых решений и поддержки платежных агентов.'
      )


  include Components/producr-cards/product-cards.pug
  include Components/how-it-work/how-it-work.pug
  +work-steps(
      [
        {
          title: 'Заключите агентский договор Creditex.Broker',
          description: 'Зарегистрируйтесь на сайте. Получите личный кабинет',
          colorClass: 'step-box-green'
        },
        {
          title: 'Привлекайте клиентов',
          description: 'Отслеживать статус рассмотрения в своем личном кабинете',
          colorClass: 'step-box-gray'
        },
        {
          title: 'Получайте предложения для ваших клиентов',
          description: 'Уникальные условия по каждому запросу',
          colorClass: 'step-box-blue'
        },
        {
          title: 'Выбирайте подходящее предложение',
          description: 'Подберите лучшее предложение для вашего клиента',
          colorClass: 'step-box-green'
        },
        {
          title: 'Зарабатывайте комиссию',
          description: 'Получайте комиссию от сервиса после успешной сделки',
          colorClass: 'step-box-gray'
        },
      ]
    )

  include Components/common/register-oneself/register-oneself.pug
  +register-oneself(
    "Передайте поиск финансовых решений ",
    "Creditex.Broker и начните получать предложения",
    "Зарегистрироваться как агент"
  )

