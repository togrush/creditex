block variables

doctype html
html(lang='ru' class='page')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="icon" href="assets/favicon/favicon.svg" type="image/svg")
    title #{title}
    block styles

    include ../analytics.pug

  body(class='page__body')

    include Components/common/user-account-header/user-account-header.pug

    main.page__main(class=pageClassName)
      block content

    if (footer)
      include Components/common/footer/footer.pug

    block scripts
