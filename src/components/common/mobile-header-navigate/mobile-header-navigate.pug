script(src=require('./mobile-header-navigate') defer)
.mobile-header
  .mobile-header__logo
    a.user-account-header__logo(href='./')
      img.logo-small(src=require('logoSmall.svg'))
  .mobile-header__menu-title
    h4 Creditex.Broker
  .mobile-header__menu-icon
    include Components/common/mobile-header-navigate/mobile-menu.svg
  .mobile-header__menu
    nav.header__main-menu
      ul.header__main-menu-list
        include Components/common/header/_main-menu-item.pug
        +main-manu-item({
          text: 'Главная',
          href: './',
        }, 'header', '')(class = 'mobile-header__main-menu-item-link')
        +main-manu-item({
          text: 'Предпринимателям',
          href: './entrepreneur.html'
        }, 'header', 'entrepreneur')(class = 'mobile-header__main-menu-item-link')
        +main-manu-item({
          text: 'Агентам',
          href: './agents.html'
        }, 'header', 'agents')(class = 'mobile-header__main-menu-item-link')
        +main-manu-item({
          text: 'Партнерам',
          href: './partners.html'
        }, 'header', 'partners')(class = 'mobile-header__main-menu-item-link')
        +main-manu-item({
          text: 'О нас',
          href: './aboutUs.html'
        }, 'header', 'aboutUs')(class = 'mobile-header__main-menu-item-link')
    .header__contact-info
      a.header__phone(href='tel:+74951915016') 8 (495) 19-15-016
      a.header__email(href='mailto:info@creditex.broker') info@creditex.broker
    .header__lk-buttons
      include UIKit/button/button.pug
      +button('header-lk-entry', './authorization.html', '', 'link', 'Войти', 'entry')(class='header__lk-entry-button')
      +button('lets-start', './registration.html', 'link', 'primary', 'Регистрация')(class='header__lets-start-button')
